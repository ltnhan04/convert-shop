@model convert_shop.Models.Customer

@{
    ViewBag.Title = "Customer Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper">
    <div class="content-wrapper  px-4 py-3">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2 class="text-primary"><i class="fas fa-info-circle"></i> Customer Details</h2>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Customer Name</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.customer_name)</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Email</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.email)</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Phone Number</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.phone_number)</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Address</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.address)</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Loyalty Points</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.loyaltyPoints)</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Used Points</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.usedPoint)</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Ranking</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.CustomerRanking.customer_ranking_name)</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Customer Type</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.CustomerType.customer_type)</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Role</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.Role.role_name)</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Created At</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.createdAt)</p>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Updated At</label>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.updatedAt)</p>
            </div>
        </div>

        <div class="text-end mt-4">
            <a href="@Url.Action("Edit", new { id = Model.customer_id })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
        </div>
    </div>
</div>
